<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thinkdone.tanzeem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.thinkdone.tanzeem.Drawer.About_us"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.thinkdone.tanzeem.Search.SearchPageViewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.thinkdone.tanzeem.Search.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.thinkdone.tanzeem.Splash_Screen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thinkdone.tanzeem.Search.PageSearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.thinkdone.tanzeem.PageList.PageListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.thinkdone.tanzeem.Pages.PageViewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.thinkdone.tanzeem.Updates.UpdatesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.thinkdone.tanzeem.BookMarks.BookMarksActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.thinkdone.tanzeem.Categories.CategoriesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.thinkdone.tanzeem.Kutub.KutubListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.thinkdone.tanzeem.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>